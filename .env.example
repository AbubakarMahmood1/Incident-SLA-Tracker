# Application
APP_NAME=incident-sla-tracker
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/incident_tracker
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/incident_tracker_test
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis/Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@incident-tracker.com
EMAIL_FROM_NAME=Incident SLA Tracker

# SLA Defaults (in hours)
SLA_CRITICAL_RESPONSE=1
SLA_CRITICAL_RESOLUTION=4
SLA_HIGH_RESPONSE=4
SLA_HIGH_RESOLUTION=24
SLA_MEDIUM_RESPONSE=8
SLA_MEDIUM_RESOLUTION=72
SLA_LOW_RESPONSE=24
SLA_LOW_RESOLUTION=168

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=incident-sla-tracker
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,txt,doc,docx,xls,xlsx

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
